#!/bin/bash
TARGETDIR=${PWD##*/}

INFILE=$1
OUT=$2
ISDATA=$3
DOSYSTEMATICS=$4
ERA=$5
RUNPERIOD=$6
XSECTION=$7
JOB=$8
echo INFILE         $INFILE
echo OUT            $OUT
echo ISDATA         $ISDATA
echo DOSYSTEMATICS  $DOSYSTEMATICS
echo ERA            $ERA
echo RUNPERIOD      $RUNPERIOD
echo XSECTION       $XSECTION
echo JOB            $JOB



echo "Processing ${INFILE} for Job ${OUT}_${JOB}"

source /etc/profile
source /cvmfs/cms.cern.ch/cmsset_default.sh
source /cvmfs/grid.desy.de/etc/profile.d/grid-ui-env.sh

module use -a /afs/desy.de/group/cms/modulefiles/
module load cmssw
cd $9
eval `scramv1 runtime -sh` #cmsenv

export X509_USER_PROXY=/nfs/dust/cms/user/wiens/x509up

#Do the skimming
mkdir -p $CMSSW_BASE/Skimming/$TARGETDIR/`date +"%Y_%m_%d"`/$OUT
cd $CMSSW_BASE/Skimming/$TARGETDIR/`date +"%Y_%m_%d"`/$OUT
pwd
echo NanoSkim ${INFILE} ${OUT}_${JOB}.root $ISDATA $DOSYSTEMATICS $ERA $RUNPERIOD $XSECTION
NanoSkim ${INFILE} ${OUT}_${JOB}.root $ISDATA $DOSYSTEMATICS $ERA $RUNPERIOD $XSECTION

