#!/bin/bash
TARGETDIR=${PWD##*/}

INFILE=$1
OUT=$2
ERA=$3
RUNPERIOD=$4
ISDATA=$5
DOSYSTEMATICS=$6
JOB=$7

echo "Processing ${INFILE} for Job ${OUT}_${JOB}"

source /etc/profile
source /cvmfs/cms.cern.ch/cmsset_default.sh
source /cvmfs/grid.desy.de/etc/profile.d/grid-ui-env.sh

module use -a /afs/desy.de/group/cms/modulefiles/
module load cmssw
cd $8
export SCRAM_ARCH=slc6_amd64_gcc700
eval `scramv1 runtime -sh` #cmsenv

export X509_USER_PROXY=/nfs/dust/cms/user/wiens/x509up

#Do the skimming
cd /tmp
xrdcp $INFILE inputFile.root
NanoSkim inputFile.root ${OUT}_${JOB}.root $ERA $RUNPERIOD $ISDATA $DOSYSTEMATICS $9
### NanoSkim ${INFILE} ${OUT}_${JOB}.root $ERA $RUNPERIOD $ISDATA $DOSYSTEMATICS

mkdir -p $CMSSW_BASE/Skimming/$TARGETDIR/`date +"%Y_%m_%d"`/$OUT
mv ${OUT}_${JOB}.root $CMSSW_BASE/Skimming/$TARGETDIR/`date +"%Y_%m_%d"`/$OUT
rm inputFile.root
